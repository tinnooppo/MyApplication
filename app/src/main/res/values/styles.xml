<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="HeaderStyle1" parent="@android:Widget.TextView">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_green</item>
    </style>
    <style name="TextViewStyle1" parent="@android:Widget.TextView">
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>
    <style name="EditTextStyle1" parent="@android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>
    <style name="EditTextPasswordStyle1" parent="@android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:password">true</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>
    <style name="TextButtonStyle1" parent="@android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_text_white</item>
    </style>
    <style name="TextButtonStyle2" parent="@android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color_text_black</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat" />

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
