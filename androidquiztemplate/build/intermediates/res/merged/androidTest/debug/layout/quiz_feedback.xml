<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin_small"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin_small"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/lastQuestionNeutral"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/bubble_size"
            android:layout_height="@dimen/bubble_size"
            android:layout_gravity="center"
            android:background="@drawable/oval_white" >

            <TextView
                android:id="@+id/lastQuestionNeutralText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textSize="@dimen/bubble_text_size"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lastQuestionOk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="@dimen/bubble_size"
            android:layout_height="@dimen/bubble_size"
            android:layout_gravity="center"
            android:background="@drawable/oval_green" >

            <TextView
                android:id="@+id/lastQuestionOkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Ok"
                android:textSize="@dimen/bubble_text_size"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lastQuestionWrong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="@dimen/bubble_size"
            android:layout_height="@dimen/bubble_size"
            android:layout_gravity="center"
            android:background="@drawable/oval_red" >

            <TextView
                android:id="@+id/lastQuestionWrongText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="No"
                android:textSize="@dimen/bubble_text_size"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/consecutiveQuestions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/bubble_size"
            android:layout_height="@dimen/bubble_size"
            android:layout_gravity="center"
            android:background="@drawable/oval_yellow" >

            <TextView
                android:id="@+id/consecutiveQuestionsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textSize="@dimen/bubble_text_size"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center_horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/bubble_size"
            android:layout_height="@dimen/bubble_size"
            android:layout_gravity="center"
            android:background="@drawable/oval_blue" >

            <TextView
                android:id="@+id/recordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="0"
                android:textSize="@dimen/bubble_text_size"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>